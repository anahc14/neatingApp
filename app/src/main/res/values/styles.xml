<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/medium_green</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/background_green</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="Cards">
        <item name="android:background">@color/medium_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">3dp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="RecipesCards">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cardCornerRadius">25dp</item>
        <item name="cardElevation">3dp</item>
        <item name="fontFamily">@font/ubuntu</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="CardsText" parent="CardView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>

    <style name="RecipeTitle" parent="CardView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ubuntu</item>
    </style>


</resources>
